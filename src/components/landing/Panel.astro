---
export interface Props {
  title?: string;
  href?: string;
}

const { title, href } = Astro.props;
---

<div class="space-y-2 py-6">
  {
    title && href ? (
      <h2 class="mb-2 text-3xl">
        <a href={href} set:html={title} />
      </h2>
    ) : (
      <h2 class="mb-2 text-3xl" set:html={title} />
    )
  }
  <slot />
</div>
